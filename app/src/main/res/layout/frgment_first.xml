<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    android:background="#EEEEEE"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical">

        <include
            android:id="@+id/firstheader"
            layout="@layout/header_first" />

        <!--轮播图-->
        <com.example.vanda.share.ImageSlideshow
            android:id="@+id/is_gallery"
            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/zhengshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="35dp">

                    <ImageView
                        android:id="@+id/img_zhengshu"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/certificate" />

                    <TextView
                        android:id="@+id/text_zhengshu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="证书"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/exam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_exam"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/img_exam" />

                    <TextView
                        android:id="@+id/text_exam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="考试"
                        android:textColor="@color/black" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/postgraduate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="35dp">

                    <ImageView
                        android:id="@+id/img_postgraduate"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/img_postgraduate" />

                    <TextView
                        android:id="@+id/text_postgraduate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="考研"

                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/art_sport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="35dp">

                    <ImageView
                        android:id="@+id/img_art_sport"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/img_art_sport" />

                    <TextView
                        android:id="@+id/text_art_sport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="体艺"

                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/audiovisual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_audiovisual"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/img_audiovisual" />

                    <TextView
                        android:id="@+id/text_audiovisual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="影音"

                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/social_exam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="35dp">

                    <ImageView
                        android:id="@+id/img_social_exam"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/img_social_exam" />

                    <TextView
                        android:id="@+id/text_social_exam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="自考"

                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@drawable/frgment_first_01"
            android:gravity="center"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/express"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_express"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/img_express" />

                    <LinearLayout
                        android:id="@+id/discribe_express"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_express"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:gravity="top"
                            android:text="快递帮"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/text_discribe_express"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="帮你解决最后一公里!"
                            android:textSize="12sp"/>
                </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/job"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_job"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/img_job" />

                    <LinearLayout
                        android:id="@+id/discribe_job"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/text_job"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="找兼职"
                            android:textSize="16sp"
                            android:textColor="@color/black" />
                        <TextView
                            android:id="@+id/text_discribe_job"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="快来赚点零花钱！"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/life"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_life"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/img_life" />

                    <LinearLayout
                        android:id="@+id/discribe_life"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/text_life"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:text="官方周边"
                            android:textColor="@color/black" />
                        <TextView
                            android:id="@+id/text_discribe_life"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="悦享生活,越好生活!"
                            android:textSize="12dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/news"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_news"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/img_news" />

                    <LinearLayout
                        android:id="@+id/discribe_news"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_news"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text="你造吗？"
                        android:textColor="@color/black" />
                        <TextView
                            android:id="@+id/text_discribe_news"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="身边事都知道!"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/uploadbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/img_add"
        app:backgroundTint="#87CEFA"
        app:borderWidth="0dp"
        app:elevation="8dp"
        app:rippleColor="#33728dff" />

</FrameLayout>
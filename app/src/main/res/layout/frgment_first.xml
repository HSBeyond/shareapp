<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    android:background="#EEEEEE"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background">
        <include
            android:id="@+id/firstheader"
            layout="@layout/header_first" />

        <!--轮播图-->
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />

        <!--轮播图指示点-->
        <LinearLayout
            android:id="@+id/viewdot"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <LinearLayout
                    android:id="@+id/zhengshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_zhengshu"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/img_certificate" />

                    <TextView
                        android:id="@+id/text_zhengshu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="证书" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/exam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_exam"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/img_exam" />

                    <TextView
                        android:id="@+id/text_exam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="考试" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/postgraduate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_postgraduate"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/img_postgraduate" />

                    <TextView
                        android:id="@+id/text_postgraduate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="考研" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                    <LinearLayout
                        android:id="@+id/art_sport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#FFFFFF">
                        <ImageView
                            android:id="@+id/img_art_sport"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/img_art_sport"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/text_art_sport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="艺术和体育"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                <LinearLayout
                    android:id="@+id/audiovisual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF">
                    <ImageView
                        android:id="@+id/img_audiovisual"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/img_audiovisual" />

                    <TextView
                        android:id="@+id/text_audiovisual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="影音"
                        android:layout_gravity="center"/>
                </LinearLayout>

                    <LinearLayout
                        android:id="@+id/social_exam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#FFFFFF">
                        <ImageView
                            android:id="@+id/img_social_exam"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/img_social_exam"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/text_social_exam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="社会考试"
                            android:layout_gravity="center"/>
                    </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <LinearLayout
                    android:id="@+id/express"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FFFFFF">
                    <ImageView
                        android:id="@+id/img_express"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/img_express" />
                    <TextView
                        android:id="@+id/text_express"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="快递帮"
                        android:gravity="top"
                        android:background="#ffffff"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/job"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF">
                    <ImageView
                        android:id="@+id/img_job"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/img_job" />
                    <TextView
                        android:id="@+id/text_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="找兼职"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                    <LinearLayout
                        android:id="@+id/life"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF">
                        <ImageView
                            android:id="@+id/img_life"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/img_life" />
                        <TextView
                            android:id="@+id/text_life"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="生活周边"
                            android:gravity="top"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/news"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF">
                    <ImageView
                        android:id="@+id/img_news"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/img_news" />
                    <TextView
                        android:id="@+id/text_news"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="你造吗？"
                        android:layout_gravity="top"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/first_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/uploadbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/img_add"
        app:backgroundTint="#87CEFA"
        app:borderWidth="0dp"
        app:elevation="8dp"
        app:rippleColor="#33728dff" />

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CertificateActivity"
    android:orientation="vertical">

    <include
        android:id="@+id/certificate_header"
        layout="@layout/header_certificate"/>

    <SearchView
        android:id="@+id/search_certificate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <!--轮播图-->
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />
    <!--轮播图指示点-->
    <LinearLayout
        android:id="@+id/viewdot"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="10dp">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/cet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/img_cet"
                android:layout_width="102dp"
                android:layout_height="74dp"
                app:srcCompat="@drawable/img_cet"/>
            <TextView
                android:id="@+id/text_cet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="英语四六级"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ncre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/img_ncre"
                android:layout_width="102dp"
                android:layout_height="74dp"
                app:srcCompat="@drawable/img_ncre" />
            <TextView
                android:id="@+id/text_ncre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计算机二级"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ntce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/img_ntce"
                android:layout_width="102dp"
                android:layout_height="74dp"
                app:srcCompat="@drawable/img_ntce" />
            <TextView
                android:id="@+id/text_ntce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教师资格证"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="270dp"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_gravity="center"/>

</LinearLayout>


